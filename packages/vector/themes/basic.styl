
dark = #222
medium = #999
light = #fafafa
overlay = rgba(0,0,0,.8)

html,body
  height 100%

body
  background light!important

.container-fluid
  position relative
  height 100%
  overflow hidden

h1
  font-weight 100!important
  padding-bottom 15px

ul
  margin-bottom 0!important
  padding-bottom 0

label
  font-weight 700
  display block

input[type="text"], textarea, input[type="password"]
  width 100%
  padding 10px 15px
  font-size 1.5em
  border solid 1px medium
  margin-bottom 30px
  border-radius 4px

.vectorList
  li
    border-bottom solid 1px medium
    a,p
      padding 15px 0
      display block

    &.active a
      color dark

#vectorEdit
  height 100%
  overflow hidden
  padding 0 30px

#vectorCollection
  border-right 1px solid medium
  height 100%
  overflow-y auto

#vectorDocument
  border-right 1px solid white
  height 100%
  overflow-y auto

.actionsWrap
  position absolute
  right 15px
  top 20px
  text-align right

  .collectionAction
    display inline-block
    margin-left 13px


#vectorForms
  position absolute
  z-index 19
  background overlay
  width 100%
  height 100%
  top 0
  left 0

  form
    position absolute
    background light
    padding 30px
    top 10%

// Main Nav

#vectorNavMain
  background dark
  padding 0 30px
  font-size 1.5em
  font-weight 100

  li
    display inline

    a
      color white
      display inline-block
      padding 10px 30px 10px 0

    &.active a
      color medium

#vectorNavSide
  position absolute
  right 30px
  top 0

  li
    display inline

    a,p
      color medium
      padding 15px 0 10px 30px
      display inline-block
      cursor pointer
